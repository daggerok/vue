{
  "name": "vue-js",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf -rf ./dist",

    "pretravis-ci": "npm run clean",
    "travis-ci": "npm-run-all travis-ci:*",
    "travis-ci:mkdir": "mkdir -pv ./dist/node_modules/normalize.css ./dist/node_modules/vue/dist",
    "travis-ci:cp-normalize": "cp -Rf ./node_modules/normalize.css/normalize.css ./dist/node_modules/normalize.css/",
    "travis-ci:cp-vue": "cp -Rf ./node_modules/vue/dist/vue.min.js ./dist/node_modules/vue/dist/",
    "travis-ci:cp-favicon": "cp -Rf ./favicon.ico ./dist/",
    "travis-ci:prod": "npm-run-all prod:*",

    "prebuild": "npm run clean",
    "build": "npm-run-all build:*",
    "build:copy-favicon": "copy ./favicon.ico ./dist",
    "build:copy-vendors": "copy ./node_modules/{normalize.css/normalize.css,vue/dist/vue.js} ./dist",
    "build:prod": "npm-run-all prod:*",

    "prod:html": "html-minifier ./index.html -o ./dist/index.html --html5 --remove-script-type-attributes --remove-style-link-type-attributes --collapse-whitespace --remove-comments",
    "prod:normalize": "cssmin ./node_modules/normalize.css/normalize.css > ./dist/node_modules/normalize.css/normalize.css",
    "prod:vue": "uglifyjs ./node_modules/vue/dist/vue.min.js --output ./dist/node_modules/vue/dist/vue.js",
    "prod:css": "cssmin ./app.css > ./dist/app.css",
    "prod:js": "uglifyjs app.js --output ./dist/app.js --source-map ./dist/app.js.map --compress --mangle --support-ie8",

    "start": "lite-server"
  },
  "keywords": [
    "vue.js"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "normalize.css": "^5.0.0",
    "vue": "2.1.8"
  },
  "devDependencies": {
    "copy": "0.3.0",
    "cssmin": "^0.4.3",
    "html-minifier": "^3.2.3",
    "lite-server": "2.2.2",
    "ncp": "2.0.0",
    "npm-run-all": "4.0.0",
    "rimraf": "2.5.4",
    "uglify-js": "^2.7.5"
  }
}
